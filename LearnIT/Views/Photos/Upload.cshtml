@using LearnIT.Utils.Helpers
@model LearnIT.Models.Photos.UploadViewModel
@{
    ViewBag.Title = "Upload";
}

<h2>Upload</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.BootstrapTextBoxFor(m => m.Description,"Ingrese una descripcion")    
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tags)
        @Html.BootstrapTextBoxFor(m => m.Tags)
    </div>
    @Html.BootstrapSubmit("Guardar")
}