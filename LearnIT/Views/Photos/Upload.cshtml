@using LearnIT.Utils.Helpers
@model LearnIT.Models.Photos.UploadViewModel
@{
    ViewBag.Title = "Upload";
}

<h2>Upload</h2>
@using (Html.BeginForm("Upload","Photos",FormMethod.Post,
    new {enctype= "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.BootstrapTextBoxFor(m => m.Description,"Ingrese una descripcion")    
        @Html.ValidationMessageFor(m=>m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tags)
        @Html.BootstrapTextBoxFor(m => m.Tags)
        @Html.ValidationMessageFor(m => m.Tags)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Image)
        <input type="file" name="image" accept="image/*"/>
        @Html.ValidationMessageFor(m => m.Image)
    </div>
    @Html.BootstrapSubmit("Guardar")
}